@{ Layout = "_Layout"; }

<body>
  <div class="container">
    <div class="jumbotron">
      <h1>Address Book</h1>
      <div class="formbutton">
        <form action="/form">
          <input type="submit" class="btn btn-success btn-lg" value="Add New Address" />
        </form>
      </div>
    </div>
    </div>

    <div class="contactscenter">
      <form action="/Form/Delete">
        <input type="submit" class="btn btn-danger btn-lg" value="Delete All Addresses" />
      </form>
    <div class="container">
      <h2>Contacts:</h2>
      @foreach(var item in Model) {
        <p>Name:@item.getName()</p>
        <p>Phone Number: @item.getPhoneNumber()</p>
        <p>Address: @item.getAddress()</p>
      }
    </div>
  </div>
</body>

</html>
